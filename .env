# AutoBasket - Environment Variables
# ====================================
# Скопируйте этот файл в .env и заполните значения

# === CLAUDE AI (умная аналитика) ===
# Получите ключ: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# === TELEGRAM BOT ===
# Создайте бота через @BotFather в Telegram
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# === DISCORD ===
# Создайте webhook в настройках канала Discord
DISCORD_WEBHOOK=

# === ODDS API ===
# Получите бесплатный ключ на https://the-odds-api.com/
# Бесплатно: 500 запросов/месяц
ODDS_API_KEY=

# === РЕЖИМ РАБОТЫ ===
# True = виртуальные деньги (тестовый режим)
# False = реальные ставки (ОСТОРОЖНО!)
SIMULATION_MODE=True

# === DEBUG ===
DEBUG_MODE=False
